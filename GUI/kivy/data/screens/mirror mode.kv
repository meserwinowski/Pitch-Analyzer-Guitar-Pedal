ShowcaseScreen:
    name: 'Mirror Mode'
       
    Label:
        text: 'LED Color Preference:'
    Label:
        text: ''
        font_size: '80sp'
    Label:
        text: ''
        font_size: '80sp'
    Label:
        text: ''
        font_size: '80sp'


    BoxLayout:
        size_hint_y: None
        height: '30dp'

        Label:
            text: 'R'

        Slider:
            id: s1
            min: 0
            max: 255
            step: 1
            on_value: root.write_color_change(), root.write_bright_rgb(s4.value, s1.value, s2.value, s3.value)

        Label:
            text: '{}'.format(s1.value)


    BoxLayout:
        size_hint_y: None
        height: '30dp'

        Label:
            text: 'G'

        Slider:
            id: s2
            min: 0
            max: 255
            step: 1
            on_value: root.write_color_change(), root.write_bright_rgb(s4.value, s1.value, s2.value, s3.value)

        Label:
            text: '{}'.format(s2.value)
            
    BoxLayout:
        size_hint_y: None
        height: '30dp'

        Label:
            text: 'B'

        Slider:
            id: s3
            min: 0
            max: 255
            step: 1
            on_value: root.write_color_change(), root.write_bright_rgb(s4.value, s1.value, s2.value, s3.value)

        Label:
            text: '{}'.format(s3.value)
    Label:
