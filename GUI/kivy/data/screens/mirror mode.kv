        text: ''
        font_size: '80sp'
    BoxLayout:
        size_hint_y: None
        height: '30dp'

        Image:
            source: r'.\data\bright.png'

        Slider:
            id: s4
            step: 1
            on_value: root.write_color_change(), root.write_bright_rgb(s4.value, s1.value, s2.value, s3.value)

        Label:
            text: '{}'.format(s4.value)
            
    Label:
